<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading red-heading">
        Aktivni projekti
        <a href=<%= new_admin_project_path %> >
          <span class="glyphicon glyphicon-plus-sign pull-right" data-toggle="tooltip" data-placement="top" title="Dodaj"></span>
        </a>
      </div>
      <div class="panel-body">
        <table class="table">
          <thead>
            <th>Ime</th>
            <th>Opis</th>
            <th>Početak</th>
            <th>Kraj</th>
            <th>Timovi</th>
            <th></th>
          </thead>
          <tbody>
          <% @projects.each do |project| %>
            <tr class="<%= project_active_class(project) %>">
              <td><%= project.name %></td>
              <td><small><%= project.description %></small></td>
              <td><%= project.start_date %></td>
              <td><%= project.end_date %></td>
              <td><%= project.teams.map(&:shortcode).join(', ') %></td>
              <td>
                <%= link_to 'Promijeni', edit_admin_project_path(project) %> |
                <% if project.is_active %>
                  <%= link_to 'Arhiviraj', archive_admin_project_path(project), method: :put %> |
                <% else %>
                  <%= link_to 'Aktiviraj', activate_admin_project_path(project), method: :put %> |
                <% end %>
                <%= link_to 'Izbriši', admin_project_path(project), method: :delete, data: { confirm: "Jeste li sigurni?" } %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
