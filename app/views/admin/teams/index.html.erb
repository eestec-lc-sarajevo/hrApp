<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading red-heading">
        Godišnji timovi
        <a href=<%= new_admin_team_path %> >
          <span class="glyphicon glyphicon-plus-sign pull-right" data-toggle="tooltip" data-placement="top" title="Dodaj"></span>
        </a>
      </div>
      <div class="panel-body">
        <table class="table">
          <thead>
            <th>Naziv</th>
            <th>Skraćenica</th>
            <th></th>
          </thead>
          <tbody>
          <% @teams.each do |team| %>
            <tr class="team-row">
              <td><%= team.name %></td>
              <td><%= team.shortcode %></td>
              <td>
                <%= link_to edit_admin_team_path(team) do %>
                  <span class="glyphicon glyphicon-pencil" data-toggle="tooltip" data-placement="top" title="Promijeni"></span>
                <% end %> |
                <%= link_to admin_team_path(team), method: :delete, data: { confirm: "Jeste li sigurni?" } do %>
                  <span class="glyphicon glyphicon-trash" data-toggle="tooltip" data-placement="top" title="Izbriši"></span>
                <% end %>
              </td>
            </tr>

          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
