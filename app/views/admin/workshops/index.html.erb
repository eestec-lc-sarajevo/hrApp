<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading yellow-heading">
        Radionice
        <a href=<%= new_admin_workshop_path %> >
          <span class="glyphicon glyphicon-plus-sign pull-right" data-toggle="tooltip" data-placement="top" title="Dodaj radionicu"></span>
        </a>
      </div>
      <div class="panel-body">
        <table class="table">
          <thead>
            <th>Ime</th>
            <th>Opis</th>
            <th>LC</th>
            <th>Početak</th>
            <th>Kraj</th>
          </thead>
          <tbody>
          <% @workshops.each do |workshop| %>
            <tr class="workshop-active">
              <td><%= workshop.name %></td>
              <td><%= workshop.lc %></td>
              <td><%= pretty_date(workshop.start_date) %></td>
              <td><%= pretty_date(workshop.end_date) %></td>
              <td>
                <%= link_to admin_workshop_path(workshop) do %>
                  <span class="glyphicon glyphicon-list" data-toggle="tooltip" data-placement="top" title="Detalji"></span>
                <% end %> |
                <%= link_to edit_admin_workshop_path(workshop) do %>
                  <span class="glyphicon glyphicon-pencil" data-toggle="tooltip" data-placement="top" title="Promijeni"></span>
                <% end %> |
                <%= link_to admin_workshop_path(workshop), method: :delete, data: { confirm: "Jeste li sigurni?" } do %>
                  <span class="glyphicon glyphicon-trash" data-toggle="tooltip" data-placement="top" title="Izbriši"></span>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
