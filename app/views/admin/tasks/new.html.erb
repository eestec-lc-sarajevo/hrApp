<span class="title"><span class="glyphicon glyphicon-hand-right"></span> <%= @project_team.team.shortcode %> - Kreiranje novog taska</span>
<div class="projects-form">
	<%= form_for @task, url: { action: "create" }, html: { name: 'form-center' } do |f| %>
	  <% if @task.errors.any? %>
	      <div id="error_explanation">
	        <h2>Nevalidni unosi:</h2>

	        <ul>
	        <% @task.errors.full_messages.each do |message| %>
	          <li><%= message %></li>
	        <% end %>
	        </ul>
	    </div>
	  <% end %>

	  <%= render partial: 'form', :locals => { :f => f, :submit_label => "Dodaj" } %>
	<% end %>
</div>