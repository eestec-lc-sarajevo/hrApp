<div class="projects-form">
	<%= form_for @task, url: { action: "update" }, html: { name: 'form-center' } do |f| %>
	<% if @task.errors.any? %>
	    <div id="error_explanation">
	        <h2>Nevalidni unosi:</h2>

	        <ul>
	        <% @task.errors.full_messages.each do |message| %>
	          <li><%= message %></li>
	        <% end %>
	        </ul>
	    </div>
	  <% end %>
	  <%= render partial: 'form', :locals => { :f => f, :submit_label => "Promijeni" } %>
	<% end %>
</div>
