<% provide(:title, "Forgot password") %>

 <div class="login-form">
 <div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="wrap">
             <%= form_for(:password_reset, url: password_resets_path,html: {class: 'col-lg-6', name: 'form-centerrp'}) do |f| %>
                <p class="form-title">Zaboravljena sifra</p>
                <div class="field form-group">
     					    <%= f.label :email %>
        					<%= f.email_field :email, class: 'form-control' %>
        			   </div>

       			    <div class="form-group">
     					    <%= f.submit "Posalji", class: 'btn btn-default btn-signup' %>
     			      </div>
   		       <% end %>
 		 	</div>
		</div>
	</div>
 </div>
</div>

