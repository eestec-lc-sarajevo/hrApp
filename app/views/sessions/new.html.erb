<div class="login-form">
  <%= form_for :session, url: { action: "create" }, html: {class: 'col-lg-6', name: 'form-center'} do |form| %>
    <p class="form-title">Login</p>
    <div id="error_explanation">
      <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: 'form-control', required: true  %>
    </div>
    <div class="field form-group">
      <%= form.label :password, 'Šifra' %>
      <%= form.password_field :password, class: 'form-control', required: true   %>
      <div class="pacific-blue">
        <%= link_to "Zaboravljena šifra?", new_password_reset_path %>
      </div>
    </div>
    <div class="form-group">
      <%= form.submit "Loguj se", class: 'btn btn-default btn-signup' %>
    </div>
    <div class="pacific-blue">
      <%= link_to 'Niste učlanjeni? Učlanite se!', new_user_path %>
    </div>
  <% end %>
</div>




