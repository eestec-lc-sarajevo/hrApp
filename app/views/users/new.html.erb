<%= form_for @user do |form| %>
  <div>
    <%= form.label :firstname %>
    <%= form.text_field :firstname %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :role_id %>
    <%= form.password_field :role_id %>
  </div>
  <div>
    <%= form.label :department_id %>
    <%= form.password_field :department_id %>
  </div>
  <div>
    <%= form.submit "Sign up" %>
  </div>
<% end %>